@{
    ViewBag.Title = "Home Page";
}
<div ng-controller="requests">
    <form class="text-center">
        <select ng-model="request.method">
            <option value="GET">GET</option>
            <option value="HEAD">HEAD</option>
        </select>
        <input type="text" ng-model="request.url" placeholder="URL" />
        <button ng-click="sendRequest()">Fetch</button>
    </form>
    <div class="text-center">
        <div>
            <p>{{display.statusCode}}</p>
            <p>{{display.url}}</p>
            <p>{{display.method}}</p>
            <p>{{display.time}}</p>
        </div>
        <button ng-click="saveRequest()">Store</button>
    </div>
</div>

